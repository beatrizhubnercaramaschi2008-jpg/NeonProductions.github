<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PortifolioStoriesApp.Views.LoginPage"
             BackgroundColor="{StaticResource LightBackground}">
	<VerticalStackLayout Padding="20" Spacing="16">
		<Label Text="Entrar" FontSize="28" TextColor="{StaticResource PrimaryText}" />
		<Entry x:Name="EmailEntry" Placeholder="Email" />
		<Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True" />
		<Button Text="Login" Style="{StaticResource PrimaryButton}" />
		<Button Text="Criar conta" Style="{StaticResource SecondaryButton}" />
	</VerticalStackLayout>
</ContentPage>